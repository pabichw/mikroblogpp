{
    "name": "Mikroblog++",
    "description": "Rozszerz możliwości Wykop.pl",
    "version": "1.0.4",
    "manifest_version": 3,
    "content_scripts": [
        {
            "all_frames": true,
            "js": ["build/content_script.js"],
            "matches": ["https://www.wykop.pl/*"],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "assets/appIcons/icon128.png"
        }
    },
    "permissions": ["storage"]
}
